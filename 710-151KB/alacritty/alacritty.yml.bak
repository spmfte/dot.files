import:
  - ~/.cache/wal/colors-alacritty.yml

# Font configuration
font:
  normal:
    family: "Fira Code" # Make sure to have this font installed
    style: Regular
  bold:
    family: "Fira Code"
    style: Bold
  italic:
    family: "Fira Code"
    style: Italic
  size: 6.0

# Window configuration
window:
  dimensions:
    columns: 100
    lines: 30
  padding:
    x: 10
    y: 10
  dynamic_padding: true
  decorations: none # Removes window decorations for a cleaner look

# Cursor configuration
cursor:
  style: Beam
  thickness: 0.125
  blink_interval: 750

# Scrolling
scrolling:
  history: 5000
  multiplier: 3

# Colors
colors:
  primary:
    background: '0x1E1E2E'
    foreground: '0xCDD6F4'
  cursor:
    text: '0x1E1E2E'
    cursor: '0xCDD6F4'
  normal:
    black:   '0x45475A'
    red:     '0xF38BA8'
    green:   '0xA6E3A1'
    yellow:  '0xF9E2AF'
    blue:    '0x89B4FA'
    magenta: '0xF5C2E7'
    cyan:    '0x94E2D5'
    white:   '0xBAC2DE'
  bright:
    black:   '0x585B70'
    red:     '0xF38BA8'
    green:   '0xA6E3A1'
    yellow:  '0xF9E2AF'
    blue:    '0x89B4FA'
    magenta: '0xF5C2E7'
    cyan:    '0x94E2D5'
    white:   '0xA6ADC8'

# Mouse configuration
mouse:
  hide_when_typing: true

# Live config reload
live_config_reload: true

